<%

const { img, link, meta, end, enable_share } = opt
if ((img || link) && meta > 0) {
  %>
  <div class="container">
    <div class="row">
    <div class="col-12 col-md-8">
      <% if (img) { %>
        <%- await include('@/sections/inc/banner', { _, opt: { img } }) %>
      <% } else if (link) { %>
        <div id="video-ghanor" class="embed-responsive embed-responsive-16by9"> <iframe class="embed-responsive-item" src="<%- link %>"></iframe> </div>
      <% } %>
    </div>
    <div class="col-12 col-md-4" id="ghanor-block">
      <h2 id="amount-ghanor">R$ 70,00</h2>
      <span font-weight="medium" color="white" class="sc-de075f52-1 bnnsWj">arrecadados da meta de <%= _.ecomUtils.formatMoney(meta) %></span>
      <div class="progress">
        <div class="progress-bar" role="progressbar" style="width: 70%" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100">
        </div>
      </div>
      <p>70%</p>
      <div class="sc-49b423c2-2 jCEwOp"><div><span color="white" class="sc-de075f52-0 diRWUO">2</span><span color="white" class="sc-de075f52-1 bdEowS">Apoiadores</span></div><div class="sc-49b423c2-3 jFWOvG"></div><span color="white" class="sc-de075f52-0 diRWUO">20/02/2024</span></div>
      
  <script>
    let amount = 0
    let quantity = 0
    fetch('https://us-central1-ecom-ghanor.cloudfunctions.net/app/4566/products', {
      method: "GET",
      headers: {
        "Content-Type": "application/json",
        "x-server-token": "423B726488D7972D6A2FABDC6C6E6"
      }
    }).then(response => response.json())
      .then(response => {
        console.log(response)
        if (response.data && response.data.length) {
          response.data.forEach(item => {
            quantity += item.quantity
            amount += item.total
          })
          document.getElementById('amount-ghanor').innerHTML = `<h2 id="amount-ghanor">${window.ecomUtils.formatMoney(amount)}</h2>`;
          document.getElementById('until-ghanor').insertAdjacentHTML('afterbegin', `<div class="sc-49b423c2-2 jCEwOp"><div><span color="white" class="sc-de075f52-0 diRWUO">${quantity}</span><span color="white" class="sc-de075f52-1 bdEowS">Apoiadores</span></div><div class="sc-49b423c2-3 jFWOvG"></div><span color="white" class="sc-de075f52-0 diRWUO">${window.ecomUtils.formatDate(end)}</span></div>
      `)
        }
      })
  </script>

      <% if (enable_share) { %>
        <%- await include('@/sections/share', { _, opt: { enable_share } }) %>
      <% } %>
    </div>
  </div>
  </div>
<% } %>
